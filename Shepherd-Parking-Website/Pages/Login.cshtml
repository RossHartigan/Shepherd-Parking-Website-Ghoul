@page
@model Shepherd_Parking_Website.Pages.Login
@{
    ViewData["Title"] = "Login";
}

<!-- Link to the external login.css -->
<link rel="stylesheet" href="~/css/login.css" />

<!-- Custom Navigation Bar for Login Page -->
<header class="navbar">
    <div class="navbar-container">
        <div class="navbar-brand">
            Shepherd Parking
        </div>
    </div>
</header>

<div class="login-container">
    <div class="logo-placeholder">
        <!-- Sheep Logo -->
        <img src="~/images/Sheep_Logo.png" alt="Sheep Logo" class="logo" />
    </div>

    <div class="form-container">
        <h2>Login:</h2>
        <form method="post">
            <div class="form-group">
                <input type="email" id="email" name="email" placeholder=" " required />
                <label for="email">Email</label>
            </div>

            <div class="form-group">
                <input type="password" id="password" name="password" placeholder=" " required />
                <label for="password">Password</label>
            </div>

            <div id="error-message" class="error-message"></div> <!-- Error message placeholder -->

            <button type="submit" id="loginBtn" class="login-btn">Login</button>
        </form>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/login.js"></script>
}
